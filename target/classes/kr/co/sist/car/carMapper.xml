<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.car">

<!-- 제조국에 대한 제조사 조회
	컬럼 하나에 여러행 조회
 -->
<select id="selectMaker" parameterType="String" resultType="String">
select maker
from car_country
where country=#{country}
</select>
<!-- 제조사에 대한 모델명 조회 -->
<select id="selectModel" parameterType="String" resultType="String">
select model
from car_maker
where maker=#{maker}
</select>
<!-- 모델명에 대한 모든 차량의 이미지, 연식, 가격, 옵션, 배기량, 입력일 조회 -->
<select id="selectCar" parameterType="String" resultType="cmoDomain">
select car_img, car_year, price, car_option, cc, input_date
from car_model
where model=#{model}
</select>

</mapper>